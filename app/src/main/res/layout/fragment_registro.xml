<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorB"
    tools:context=".RegistroFragment">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:lineSpacingExtra="8sp"

            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="REGISTRO"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

        <EditText
            android:id="@+id/especialidad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Especialidad"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/txtNc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Numero de control"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/txtNip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword" />
        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"
            android:lineSpacingExtra="8sp"
            android:singleLine="false" />
        <EditText
            android:id="@+id/txtApellidoP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Apellido paterno"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/txtApellidoM"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Apellido Materno"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Correo"
            android:inputType="textEmailSubject"
            />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/aceptarRegistro"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrar"/>
            <Button
                android:id="@+id/cancelarReg"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCELAR"/>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>