<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".addConvenioFragment">
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:lineSpacingExtra="8sp"

            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Registro de Convenio"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            />

        <EditText
            android:layout_marginTop="30dp"

            android:id="@+id/nombreIns"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Nombre de la institucion"
            android:inputType="text"

            />

        <EditText
            android:id="@+id/descripcionIns"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="50dp"
            android:hint="Descripcion de la institucion"
            android:lineSpacingExtra="8sp"
            android:singleLine="false" />


        <EditText
        android:id="@+id/telefonoIns"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="50dp"
        android:hint="Telefono de la institucion"
        android:lineSpacingExtra="8sp"
        android:singleLine="false" />
        <EditText
            android:id="@+id/especialidadIns"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="50dp"
            android:hint="Especialidad designada"
            android:lineSpacingExtra="8sp"
            android:singleLine="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <Button
                android:layout_marginLeft="30dp"
                android:id="@+id/registrar"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrar"/>
            <Button
                android:id="@+id/limpiar"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar campos"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>